<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Data (Excel)"
        android:layout_marginBottom="16dp"/>

    <!-- New Export Buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports &amp; Exports"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_export_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export PDF Report"
        android:backgroundTint="@color/samsung_blue"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_export_excel_matrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Excel Matrix"
        android:backgroundTint="@color/samsung_blue"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_export_master_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Master Backup (Excel)"
        android:backgroundTint="#2E7D32"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_pin_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage PIN"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile &amp; Backup"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark Mode"
            android:textSize="18sp"/>

        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
